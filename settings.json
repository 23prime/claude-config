{
  "permissions": {
    "allow": [
      // Claude Code tools
      "Read",
      "Write", 
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "TodoWrite",
      "Task",
      "WebFetch",
      "WebSearch",
      
      // Git (read-only operations)
      "Bash(git:status)",
      "Bash(git:diff)", 
      "Bash(git:log)",
      "Bash(git:show)",
      
      // Build tools
      "Bash(make:*)",
      "Bash(cmake:*)",
      "Bash(task:*)",
      
      // File operations
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(find:*)",
      "Bash(file:*)",
      "Bash(stat:*)",
      
      // File content viewing
      "Bash(cat:*)",
      "Bash(bat:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(less:*)",
      "Bash(more:*)",
      
      // Text processing
      "Bash(grep:*)",
      "Bash(rg:*)",
      "Bash(wc:*)",
      "Bash(sort:*)",
      "Bash(uniq:*)",
      "Bash(cut:*)",
      "Bash(awk:*)",
      "Bash(sed:*)",
      "Bash(jq:*)",
      
      // System info
      "Bash(whoami:*)",
      "Bash(uname:*)",
    ],
    "ask": [
      // Container tools
      "Bash(docker:*)",
      "Bash(docker-compose:*)",
      
      // Network tools
      "Bash(curl:*)",
      "Bash(wget:*)",
      
      // Potentially destructive operations
      "Bash(rm:*)",
      
      // Git (risky operations)
      "Bash(git:branch)",
      "Bash(git:checkout)",
      "Bash(git:switch)",
      "Bash(git:pull)",
      "Bash(git:fetch)",
      "Bash(git:reset)",
      "Bash(git:stash)",
    ],
    "deny": [
      // Sensitive file access
      "Read(.env)",
      "Read(./secrets/**)",
      "Read(~/.ssh/**)",
      
      // System administration
      "Bash(sudo:*)",
      
      // Git (destructive operations)
      "Bash(git:add)",
      "Bash(git:commit)",
      "Bash(git:push)",
      "Bash(git:merge)",
      "Bash(git:rebase)",
    ]
  },
  "hooks": {
    "Notification": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-notify 'Notification' 'Claude Code needs your response.'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "claude-notify 'Stop' 'Claude Code completed the task.'"
          }
        ]
      }
    ]
  }
}
